###############################################################################
# pacman
###############################################################################

if [[ -f $DIR/packages/apt ]]; then
  exec<$DIR/packages/apt
  while read line
  do  
    if [[ ! "$line" =~ (^#|^$) ]]; then
      packages="$packages $line"
    fi
  done
  sudo pamac install --no-confirm $packages
fi

sh $DIR/oh-my-zsh.sh

